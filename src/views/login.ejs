<div class="row mt-5">
  <div class="col-md-6 m-auto">
    <div class="card card-body" style="margin: 35% 0% 35% 0%;">
      <h1 class="text-center mb-3"><em class="fas fa-sign-in-alt"></em>  Login</h1>
      <% include ./partials/messages %>
      <form action="/login" method="POST">
        <div class="form-group">
          <label for="username">Username</label>
          <input
            type="username"
            id="username"
            name="username"
            class="form-control<%= error.length ? ' is-invalid' : ''%>"
          />
        </div>
        <div class="form-group">
          <label for="password">Password</label>
          <input
            type="password"
            id="password"
            name="password"
            class="form-control<%= error.length ? ' is-invalid' : ''%>"
          />
        </div>
        <button type="submit" class="btn btn-primary btn-block">Login</button>
      </form>
      <p class="lead mt-4">
        No Account? <a href="/register">Register</a>
      </p>
    </div>
  </div>
</div>